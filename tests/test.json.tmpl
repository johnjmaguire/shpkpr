{
  "cmd": null,
  "cpus": 0.1,
  "mem": 512,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{DOCKER_REPOTAG}}",
      "forcePullImage": true,
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ]
    }
  },
  "healthChecks": [
    {
      "path": "/",
      "protocol": "HTTP",
      "portIndex": 0,
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ],
    [
      "subnet", "LIKE", "internal"
    ]
  ],
  "upgradeStrategy": {
      "minimumHealthCapacity": 0.7,
      "maximumOverCapacity": 0.8
  },
  "labels": {
    "HAPROXY_MODE": "http",
    "DOMAIN": "{{DEPLOY_DOMAIN}}"
  }
}
